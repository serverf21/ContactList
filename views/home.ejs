<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.title %></title>
    <script
      src="https://kit.fontawesome.com/ebc802410a.js"
      crossorigin="anonymous"
    ></script>
    <!-- Our css should be below all other files to override them -->
    <link rel="stylesheet" href="/css/home.css" type="text/css" />
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i>
      Sarvagya's Contact List
    </h1>
    <div id="list">
      <ul>
        <% for (let i of contact_list){%>
        <li>
          <div class="details">
            <h4><%=i.name%></h4>
            <h4><%=i.phone%></h4>
          </div>
          <div class="delete-button">
            <a href="/delete-contact/?id=<%=i._id%>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <%}%>
      </ul>
    </div>

    <form action="/create-contact" method="POST" class="form">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input
        type="number"
        name="phone"
        placeholder="Enter Phone Number"
        required
      />
      <button type="submit">Add Contact</button>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
